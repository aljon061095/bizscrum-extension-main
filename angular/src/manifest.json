{
  "manifest_version": 3,
  "name": "Bizscrum Extension",
  "short_name": "Bizscrum Browser Extension",
  "version": "1.0.0",
  "description": "Bizscrum Extension",
  "incognito": "split",
  "options_page": "index.html?#/options",
  "icons": {
    "16": "assets/img/icon_16x16.png",
    "48": "assets/img/icon_48x48.png",
    "128": "assets/img/icon_128x128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/img/icon_16x16.png",
      "32": "assets/img/icon_32x32.png"
    }
  },
  "permissions": ["contextMenus", "storage", "tabs"],
  "content_scripts": [
    {
      "all_frames": false,
      "js": ["contentPage.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
